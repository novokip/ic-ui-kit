{
  "compilerOptions": {
    "target":"es6",
    "module":"Node16",
    "strict": true,
    "lib": ["ES2015","DOM"],
    "outDir": "./dist/",
    "noImplicitAny": false,
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "moduleResolution": "node16",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [ "node_modules",
  "dist",
  "build-config",
  ".storybook",
  "src/stories"]
}